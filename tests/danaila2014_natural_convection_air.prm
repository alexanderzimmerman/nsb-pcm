# Listing of Parameters
# ---------------------
subsection meta
    set dim = 2
end

subsection geometry
    set grid_name = hyper_rectangle
    set sizes = 0., 0., 1., 1.
end

subsection source_function
    set Function expression = 0.; 0.; 0.; 0.
end

subsection initial_values
    
    set function_name = parsed
    
    subsection parsed_function
        set Function constants = theta_c=-0.5, theta_h=0.5
        set Function expression = 0.; 0.; 0.; theta_h + (theta_c - theta_h)*x
    end
    
end

subsection refinement
    set boundaries_to_refine = 0
    set initial_boundary_cycles = 0
    set initial_global_cycles = 3
end

subsection time
    set end_time = 1.0
    set global_refinement_levels = 1
end

subsection solver
    set max_iterations = 1000
    set normalize_tolerance = false
    set tolerance           = 1e-6
end

subsection output
    set write_solution_vtk = true
    set time_step_interval = 1
end
