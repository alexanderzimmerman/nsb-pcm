# Listing of Parameters
# ---------------------
subsection meta
    set dim = 2
end

subsection geometry
    set grid_name = hyper_rectangle
    set sizes = 0., 0., 1., 1.
end

subsection initial_values
    
    set function_name = parsed
    
    subsection parsed_function
        set Function constants = epsilon=1.e-12
        set Function expression = if(y > (1. - epsilon), 1., 0.); 0.; 0.
    end
    
end

subsection refinement
    set boundaries_to_refine = 0
    set initial_boundary_cycles = 0
    set initial_global_cycles = 3
end

subsection time
    set end_time = 1.0
    set global_refinement_levels = 1
end

subsection nonlinear_solver
    set max_iterations = 10
    set tolerance = 1e-8
end

subsection linear_solver
    set method = LU
end

subsection output
    set write_solution_vtk = true
    set time_step_interval = 1
end
