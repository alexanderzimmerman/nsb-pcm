# Listing of Parameters
# ---------------------
subsection meta
    set dim = 2
end

subsection geometry
    set grid_name = hyper_rectangle
    set sizes = 0., 0., 1., 1.
end

subsection initial_values
    set Function constants = theta_c = -0.5, theta_h = 0.5
    set Function expression = 0.; 0.; 0.; theta_h + x*(theta_c - theta_h)
end

subsection refinement
    set initial_global_cycles = 5
end

subsection nonlinear_solver
    set max_iterations = 50
    set tolerance = 1.e-5
end

subsection time
    set end = 1.
    set min_step_size = 1.e-4
    set max_step_size = 0.1
end

subsection output
    set write_solution_vtk = true
end
